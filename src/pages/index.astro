---
// import translations
import translations from "@utils/t.ts";
import Layout from "@layouts/Layout.astro";
import Container from "@src/components/Container.astro";

const t = translations(Astro.url);
---

<Layout>
	<Container class="pt-16 lg:grid grid-cols-3">
		<div class="lg:col-span-2">
			<span set:html={t.home_description} />
		</div>
		<div class="lg:col-span-1 sm:mt-10">
			<img src="../src/assets/images/front/edin-frontpage.jpg">
		</div>
	</Container>
	<Container class="pt-10 lg:grid grid-cols-2 gap-7 justify-items-center">
		<div>
			<span set:html={t.interest} />
		</div>
		<div>
			<span set:html={t.education}/>
		</div>
	</Container>
</Layout>
